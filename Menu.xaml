        <Border BorderBrush="#F2C193" BorderThickness="5" CornerRadius="0" Margin="245,93,299,371">
            <Image Source="/ảnh/Screenshot 2025-03-05 232036.png" Stretch="Fill"/>
        </Border>
        <Border BorderBrush="#F2C193" BorderThickness="5" CornerRadius="0" Margin="473,93,71,371">
