        <Button Content="←" HorizontalAlignment="Left" Margin="38,618,0,0" 
        VerticalAlignment="Top" Width="47" Background="#CE9859" RenderTransformOrigin="0.5,0.5" Height="23" Click="Button_Click_3">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.672"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                    CornerRadius="16">
                        <!-- Bo tròn nút -->
                        <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Trà sữa" HorizontalAlignment="Left" Margin="79,27,0,0"
        VerticalAlignment="Top" Height="40" Width="143" Background="#F2C193"
        BorderBrush="#83705E" BorderThickness="4" FontSize="20" FontWeight="Bold">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="10">
                        <!-- Bo góc -->
                        <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="→" HorizontalAlignment="Left" Margin="97,618,0,0" 
            VerticalAlignment="Top" Width="47" Background="#CE9859" RenderTransformOrigin="0.5,0.5" Height="23" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.672"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" 
                        CornerRadius="16">
                        <!-- Bo tròn nút -->
                        <ContentPresenter HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Đồ ăn vặt" HorizontalAlignment="Left" Margin="260,27,0,0"
