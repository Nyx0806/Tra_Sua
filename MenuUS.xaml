<UserControl x:Class="Tra_Sua.MenuUS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tra_Sua"
             mc:Ignorable="d" 
             d:DesignHeight="690" d:DesignWidth="720">
    <Grid Background="#F4D8B5" Margin="0,0,0,38" HorizontalAlignment="Left" Width="746">
        <Button x:Name="Menu_Trasua" Content="Trà sữa" HorizontalAlignment="Left" Margin="79,27,0,0"
            VerticalAlignment="Top" Height="40" Width="143" Background="#F2C193"
            BorderBrush="#83705E" BorderThickness="4" FontSize="20" FontWeight="Bold" Click="Menu_Trasua_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="10">
                        <!-- Bo góc -->
                        <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Quay lại" HorizontalAlignment="Left" Margin="500,27,0,0"
                VerticalAlignment="Top" Height="40" Width="143" Background="#F2C193"
                BorderBrush="#83705E" BorderThickness="4" FontSize="20" FontWeight="Bold" Click="Button_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="10">
                        <!-- Bo góc -->
                        <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Đồ ăn vặt" HorizontalAlignment="Left" Margin="260,27,0,0"
            VerticalAlignment="Top" Height="40" Width="143" Background="#F2C193"
            BorderBrush="#83705E" BorderThickness="4" FontSize="20" FontWeight="Bold">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="10">
                        <!-- Bo góc -->
                        <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Grid x:Name="menu" Margin="0,87,0,0"/>
    </Grid>
</UserControl>
