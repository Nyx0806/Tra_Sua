<Window x:Class="Tra_Sua.XoaNV"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tra_Sua"
        mc:Ignorable="d"
        Title="ThemNV" Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="White" BorderBrush="#CE9859" BorderThickness="8" CornerRadius="15" Padding="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="Black" Opacity="0.5"/>
        </Border.Effect>

        <Grid Background="#F4D8B5" Margin="0,0,0,10">
            <Border Grid.Column="0" Width="211" Height="204" CornerRadius="25"
                Background="#F4D8B5" BorderBrush="#CE9859" BorderThickness="8"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="39,85,0,0">
                <TextBlock Text="👤" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <Label Content="Họ Tên" HorizontalAlignment="Left" Margin="304,95,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="39" Width="100"/>
            <Label Content="Ngày Sinh " HorizontalAlignment="Left" Margin="304,145,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="39" Width="119"/>
            <Label Content="SĐT" HorizontalAlignment="Left" Margin="304,197,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="39" Width="100"/>
            <Label Content="Email" HorizontalAlignment="Left" Margin="304,247,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="39" Width="100"/>
            <Label Content="Chức Vụ" HorizontalAlignment="Left" Margin="304,297,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="39" Width="100"/>

            <TextBox HorizontalAlignment="Left" Margin="418,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" Height="34" FontSize="20"/>
            <TextBox HorizontalAlignment="Left" Margin="418,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" Height="34" FontSize="20"/>
            <TextBox HorizontalAlignment="Left" Margin="418,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" Height="34" FontSize="20"/>
            <TextBox HorizontalAlignment="Left" Margin="382,252,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="347" Height="34" FontSize="20"/>

            <ComboBox FontSize="20" Foreground="Brown" Background="#F4CBA0"
                FontWeight="Bold" BorderThickness="0" Padding="5"
                Margin="418,297,190,168">
                <ComboBoxItem Content="Thu Ngân"/>
                <ComboBoxItem Content="Pha Chế"/>
                <ComboBoxItem Content="Chạy Bàn"/>
            </ComboBox>
            <Button Content="Xóa Nhân Viên " HorizontalAlignment="Left" Margin="506,423,0,0" 
                VerticalAlignment="Top" Height="49" Width="211" 
                BorderBrush="#83705E" BorderThickness="3" Background="#F4CBA0" 
                FontWeight="Bold"  FontSize="20" Foreground="#FF83705E" >
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="10" Padding="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Quay Lại " HorizontalAlignment="Left" Margin="39,423,0,0" 
                VerticalAlignment="Top" Height="49" Width="211" 
                BorderBrush="#83705E" BorderThickness="3" Background="#F4CBA0" 
                FontWeight="Bold"  FontSize="20" Foreground="#FF83705E" Click="Button_Click">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="10" Padding="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>