<UserControl x:Class="Tra_Sua.CapNhapMon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tra_Sua"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1129" Height="672">
    <Grid Background="#F4D8B5" >
        <Button Content="Trà sữa" HorizontalAlignment="Left" Margin="79,27,0,0"
            VerticalAlignment="Top" Height="40" Width="143" Background="#F2C193"
            BorderBrush="#83705E" BorderThickness="4" FontSize="20" FontWeight="Bold" >
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="10">
                        <!-- Bo góc -->
                        <ContentPresenter HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Đồ ăn vặt" HorizontalAlignment="Left" Margin="260,27,0,0"
            VerticalAlignment="Top" Height="40" Width="143" Background="#F2C193"
            BorderBrush="#83705E" BorderThickness="4" FontSize="20" FontWeight="Bold">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="10">
                        <!-- Bo góc -->
                        <ContentPresenter HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Thêm Món" HorizontalAlignment="Left" Margin="900,600,0,0"
            VerticalAlignment="Top" Height="66" Width="183" Background="#F2C193"
            BorderBrush="#83705E" BorderThickness="4" FontSize="20" FontWeight="Bold" Click="Button_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="10">
                        <!-- Bo góc -->
                        <ContentPresenter HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</UserControl>
