<UserControl x:Class="Tra_Sua.ThuNgan"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:Tra_Sua"
                mc:Ignorable="d" 
                d:DesignHeight="594" d:DesignWidth="1129">
    <Grid Background="#F4D8B5" Margin="0,0,0,10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Employees}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="322" ItemHeight="164" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="322" Height="164" Background="#F4CBA0" Padding="10"
                                CornerRadius="10" BorderBrush="Black" BorderThickness="1"
                                Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Border Width="50" Height="50" CornerRadius="25"
                                            Background="White" BorderBrush="Black" BorderThickness="1"
                                            HorizontalAlignment="Left">
                                        <TextBlock Text="👤" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <!-- ComboBox chọn trạng thái nhân viên dưới Avatar -->
                                    <ComboBox SelectedItem="{Binding Status}" Margin="0,5,0,0" Width="100" Background="#F2C193" BorderBrush="#CE9859">
                                        <ComboBoxItem Content="Đang làm" IsSelected="True"/>
                                        <ComboBoxItem Content="Đã nghỉ"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="10,0,0,10">
                                    <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Mã Nv: " FontSize="14" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding EmployeeId}" FontSize="14"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Ngày Sinh: " FontSize="14" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding DateOfBirth}" FontSize="14"/>
                                    </StackPanel>
                                    <TextBlock Text="Thông tin liên hệ:" FontSize="14" FontWeight="Bold" Margin="0,10,0,0"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📞" FontSize="14"/>
                                        <TextBlock Text="{Binding PhoneNumber}" FontSize="14" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✉️" FontSize="14"/>
                                        <TextBlock Text="{Binding Email}" FontSize="14" FontWeight="Bold"/>
                                    </StackPanel>

                                </StackPanel>
                                <ItemsControl ItemsSource="{Binding Employees}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding EmployeeId}" FontSize="14"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>